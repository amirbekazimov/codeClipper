{
  "manifest_version": 3,
  "name": "Copy Code Button",
  "version": "1.1",
  "description": "Add "Copy" button for code blocks on web pages",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "icon48.png"
  }
}
